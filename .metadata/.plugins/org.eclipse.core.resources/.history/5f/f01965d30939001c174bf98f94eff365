package leetCode;

public class P0010 {
	public boolean isMatch(String s, String p) {
		char curr, strCurr;
		int indReg = 0, indStr = 0;
		for(; indReg < p.length(); indReg++) {
			strCurr = s.charAt(indStr);
			curr = p.charAt(indReg);
			if(curr == '.') curr = s.charAt(indStr);
			if(indReg < p.length()-1 && p.charAt(indReg+1) == '*' && curr == s.charAt(indStr)) {
				while(curr == s.charAt(indStr))indStr++;
				indReg++;
				if(indStr >= s.length()) break;
				continue;
			}
			if(curr == s.charAt(indStr)) {
				indStr++;
				continue;
			} else {
				return false;
			}
		}
		if(indStr != s.length()) {
			// if not all characters have been iterated through return false
			return false;
		}
		return true;
	}
}
